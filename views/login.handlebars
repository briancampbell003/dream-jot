<div class="card-group login-contain">
  <div class="login-card">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">
      <div class="form-group row">
        <label for="email-login" class="col-sm-4 col-form-label">Email:</label>
        <div class="col-sm-8">
          <input class="form-input" type="text" id="email-login" />
        </div>
      </div>
      <div class="form-group row">
        <label for="password-login" class="col-sm-4 col-form-label">Password:</label>
        <div class="col-sm-8">
          <input class="form-input" type="password" id="password-login" />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <button class="btn btn-dark login-btns" type="submit">login</button>
        </div>
      </div>
    </form>
  </div>
  <div class="login-card">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form">
      <div class="form-group row">
        <label for="username-signup" class="col-sm-4 col-form-label">Username:</label>
        <div class="col-sm-8">
          <input class="form-input" type="text" id="username-signup" />
        </div>
      </div>
      <div class="form-group row">
        <label for="email-signup" class="col-sm-4 col-form-label">Email:</label>
        <div class="col-sm-8">
          <input class="form-input" type="text" id="email-signup" />
        </div>
      </div>
      <div class="form-group row">
        <label for="password-signup" class="col-sm-4 col-form-label">Password:</label>
        <div class="col-sm-8">
          <input class="form-input" type="password" id="password-signup" />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <button class="btn btn-dark login-btns" type="submit">signup</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>